<%- contentFor('body') %>
<div class="row mt-5">
    <aside class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <div class="card">
            <div class="card-header">
                Ask a question! :)
            </div>
            <div class="card-body">
                <form action="">
                    <div class="form-group">
                        <textarea cols="30" rows="5" class="form-control" name=""
                            placeholder="Describe your question..."></textarea>
                    </div>
                    <div class="form-group row">
                        <div class="col-x2-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="switch">
                                <input type="checkbox" id="switch" />
                                <label for="switch"></label>
                            </div>
                        </div>
                        <div class="col-x2-12 col-sm-12 col-md-6 col-lg-6">
                            <button type="submit" class="btn btn-secondary">Ask!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                People
            </div>
            <div class="card-body">
                <div class="profile row mt-2">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <img src="https://api.adorable.io/avatar/150/abott@adorable.png"
                            class="img-fluid img-profile" alt="">
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 mt-3 name-info">
                        <a href="" class="">Nome</a>
                    </div>
                </div>
            </div>
        </div>
    </aside>


    <section class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
        <div class="row mt-2 question-box">
            <div class="card col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="card-body">
                    <div class="profile row">
                        <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                            <img src="https://api.adorable.io/avatar/150/abott@adorable.png"
                                class="img-fluid img-profile" alt="">
                        </div>
                        <div class="col-xs-8 col-sm-8 col-md-10 col-lg-10 mt-3 name-info">
                            <a href="" class="">Nome</a>
                        </div>
                    </div>
                    <blockquote class="blockquote">
                        <p>
                            Teste de uma pergunta mas sem lorem ipsum?
                        </p>
                        <div class="blockquote-footer ml-3">
                            Teste de Uma pergunta mas sem lorem ipsum...
                        </div>
                    </blockquote>
                </div>
            </div>
        </div>
    </section>
</div>


