<%- contentFor('body') %>
<div class="row mt-5">
    <aside class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <div class="card">
            <div class="card-header">
                Ask a question! :)
            </div>
            <div class="card-body">
                <form action="/answers" method="post">
                    <input type="hidden" name="answerUser" value="<%= answerUser.username %>">
                    <div class="form-group">
                        <textarea cols="30" rows="5" class="form-control" name="question"
                            placeholder="Describe your question..."></textarea>
                    </div>
                    <div class="form-group row">
                        <div class="col-x2-12 col-sm-12 col-md-6 col-lg-6">
                            <div class="switch">
                                <input type="checkbox" id="is_annon" name="is_annon" />
                                <label for="is_annon"></label>
                            </div>
                        </div>
                        <div class="col-x2-12 col-sm-12 col-md-6 col-lg-6">
                            <button type="submit" class="btn btn-secondary">Ask!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header">
                People
            </div>
            <div class="card-body">
                <% sugestions.forEach(function(sugestion) { %>
                
                <div class="profile row mt-2">
                    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                        <img src="<%= sugestions.avatar %>"
                            class="img-fluid img-profile" alt="">
                    </div>
                    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 mt-3 name-info">
                        <a href="/t/<%= sugestion.username %>" class=""><%= sugestion.name %></a>
                    </div>
                </div>
                
                <% }); %>
            </div>
        </div>
    </aside>


    <section class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
        <% answers.forEach(function(data) { %>
            <div class="row mt-2 question-box">
                <div class="card col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="card-body">
                        <div class="profile row">
                            <div class="col-xs-4 col-sm-4 col-md-2 col-lg-2">
                                <img src="<%= data.questionUser.avatar %>"
                                    class="img-fluid img-profile" alt="">
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-8 col-lg-8 mt-3 name-info">
                                <a href="/t/<%= data.questionUser.username %>" class=""><%= data.questionUser.name %></a>
                            </div>
                            <% if (checkUserDelete(user, answerUser)) { %>
                                <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 mt-3">
                                    <form action="/answers/<%= data.id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-link">Delete</button>
                                    </form>
                                 </div>
                            <% } %>                            
                        </div>
                        <blockquote class="blockquote">
                            <p>
                                <%= data.question %>
                            </p>
                            <div class="blockquote-footer ml-3">
                                <%= data.answer %>
                            </div>
                        </blockquote>
                    </div>
                </div>
            </div>
       
        <% }); %>
       
    </section>
</div>


